{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "exclude": ["node_modules", "dist"]
}
